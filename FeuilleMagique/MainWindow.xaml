<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="767.223" Width="625.711" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/feuilleCarreau.gif"/>
        </Grid.Background>
        <TextBox x:Name="feuille" HorizontalAlignment="Left" Height="677" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" FontFamily="Freestyle Script" FontSize="17" AcceptsReturn="True" Margin="118,59,0,0" Background="{x:Null}"/>
        <Image x:Name="pagesuivante" HorizontalAlignment="Left" Height="50" Margin="568,686,0,0" VerticalAlignment="Top" Width="50" MouseLeftButtonDown="pagesuivante_MouseLeftButtonDown" Source="images/pagecorneeDroite.png"/>
        <Image x:Name="pageprecedente" HorizontalAlignment="Left" Height="50" Margin="-1,684,0,0" VerticalAlignment="Top" Width="50" MouseLeftButtonDown="pageprecedente_MouseLeftButtonDown" Source="images/pagecorneeDroite.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBox x:Name="titre" HorizontalAlignment="Left" Height="49" Margin="118,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" Background="{x:Null}" FontFamily="Freestyle Script" FontSize="30"/>
        <TextBlock x:Name="numpage" HorizontalAlignment="Left" Height="49" TextWrapping="Wrap" VerticalAlignment="Top" Width="113" FontFamily="Freestyle Script" FontSize="25"/>
    </Grid>
</Window>
